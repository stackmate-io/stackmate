{
  "compilerOptions": {
    "target": "ES2018",
    "module": "amd",
    "lib": ["es5", "es6" ],
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "outFile": "./dist/index.js",
    "rootDir": "./",
    "rootDirs": ["./src", "./profiles", "./tests"],
    "composite": true,
    "importHelpers": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@stackmate/engine/*": [
        "./src/*"
      ],
      "@stackmate/engine-tests/*": [
        "./tests/*"
      ],
      "@stackmate/profiles/*": [
        "./profiles/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "profiles/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
